{% extends '::layout/index.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block container %}
    <h2>Analytic Service :- Dashboard</h2>
    <h4>Total Events ({{ entities.getTotalItemCount }})</h4>
    <div class="row" style="padding-bottom: 20px;">
        <div class="col-lg-12">
            <div style="padding-bottom: 50px;">
                <a href="{{ path('event_group_by_name') }}" class="btn btn-primary pull-right" style="margin-left: 10px;">Group By Name</a>
                <a href="{{ path('event_group_by_date') }}" class="btn btn-primary pull-right">Group By Date</a>
            </div>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Event Name</th>
                        <th>Event Value</th>
                        <th>Referrer Url</th>                
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td>{{ entity.eventName }}</td>
                            <td>{{ entity.eventValue }}</td>
                            <td>{{ entity.referrerUrl }}</td>                             
                            <td>{{ entity.createdDate|date('Y-m-d h:i') }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table> 
            {{ knp_pagination_render(entities) }}
        </div>
    </div>      
{% endblock %}
